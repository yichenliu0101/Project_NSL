@{
    ViewData["Title"] = "VerifyPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Nsl_Core.Models.ViewModels.VerifyPasswordVM
<section>
    <div class="img-fluid banner-box">
        <img src="~/image/banner-5.jpg" alt="image description" class="img-fluid banner-height">
    </div>
</section>
<main>
    <!-- banner-container -->
    <!-- Teachers list -->
    <section class="block-padding">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-12 col-lg-12 mb-30 wow fadeInUp" data-wow-duration="600ms">
                    <div class="about-block active">
                        <div class="container text-center">
                            <h3 class="mb-4">重新設置密碼</h3>
                            <form class="login-form mx-auto" id="personalfile" method="post" enctype="multipart/form-data">
                                <hr />
                                <div class="my-3">
                                    <label class="me-2">新的密碼:</label>
                                    <input type="password" name="Password" class="form-control" id="password"
                                           placeholder="請輸入密碼" style="display: inline-block; width:15%" />
                                    <div>
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger",@id="passErr"})
                                    </div>
                                </div>
                                <div class="my-3">
                                    <label class="me-2">確認密碼:</label>
                                    <input type="password" class="form-control" id="confirmpassword" name="ConfirmPassword"
                                           placeholder="請重複輸入密碼" style="display: inline-block; width:15%" />
                                </div>
                                <div style="display: inline-block; margin-left:2%;">
                                    <input type="submit" class="btn-backedit2" id="submit" value="確定" />
                                </div>
                                <hr />
                                <div style="display: inline-block; margin-left:2%;">
                                    <a href='@Url.Content("~/NSL/Login")' class="btn-backedit2">返回登入頁面</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script src="~/js/vanilla-tilt.js"></script>

