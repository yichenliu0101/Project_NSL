@using Nsl_Core.Models.Dtos.Member.Login;
@using Nsl_Core.Models.Infra;
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor;
@{
	LoginDto? user = null;
	if (Accessor.HttpContext.Session.GetString("Login") != null)
	{
		user = Accessor.HttpContext.Session.GetKey<LoginDto>("Login");
	}
}
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="title" content="HyperExtra is a multipurpose agency template from LettStartDesign">
	<meta name="robots" content="noindex, nofollow">
	<meta name="author" content="LettStartDesign">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Never Stop Learning</title>

	<!-- include the site Google Fonts stylesheet -->
	<link href="~/css/css.css" rel="stylesheet">

	<!-- Icons -->
	@*    <link rel="stylesheet" href="~/css/all.min.css">*@
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
	<link rel="stylesheet" href="~/css/boxicons.min.css">

	<!-- include theme plugins setting stylesheet -->
	<link rel="stylesheet" href="~/css/plugins.min.css">

	<!-- include the site bootstrap stylesheet -->
	<link rel="stylesheet" href="~/css/bootstrap.min.css">

	<!-- include the site stylesheet -->
	<link rel="stylesheet" href="~/css/style.min.css">

	<link rel="stylesheet" href="~/css/nsl.css">
	<!-- AOS -->
	<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

	<!-- fullcalendar -->
	<meta charset='utf-8' />
	<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js'></script>

	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	@await RenderSectionAsync("Styles", required: false)
</head>

<body>
	<!-- pageWrapper -->
	<div class="page-wrapper" id="main" style="padding-left: 15%;">
		<!-- pageHeader -->
		<header id="pageHeader" class="backindex-page-header navbar-light">
			<div class="header-inner">
				<div class="menu-holder">
				</div>
				<!-- menuHolder -->

				<span class="side-over"></span>
			</div>
		</header>
		<main>
			<div id="mySidenav" class="sidenav">
				<!-- mainLogo -->
				<div class="navbox mx-auto text-center">
					<div class="logo-nsl">
						<a href="~/BackHome/Index">
							<figure>
								<img src="~/picture/LOGO-3.png" class="img-fluid logo-white title-pic" alt="NSL">
								<figcaption style="margin-top: 15px;">NSL後臺管理頁面</figcaption>
							</figure>

						</a>
					</div>
					<div class="side-btns">
						<div class="side-btn-link">
							<a class="my-auto" href="~/NSL/Index">回首頁</a>
						</div>
						<div>
							<div class="side-btn-link" data-bs-toggle="collapse" data-bs-target="#collapseWebsite" aria-controls="collapseExample" style="font-size: 20px;">
								網站維護
							</div>
							<div class="collapse px-3" id="collapseWebsite">
								<a href="@Url.Content("~/BackMaintain/ArticleIndex")" class="side-btn-child-link mt-1">
									文章維護
								</a>
								<a href="@Url.Content("~/BackMaintain/CouponIndex")" class="side-btn-child-link">
									優惠券維護
								</a>
							</div>
						</div>

						<div class="side-btn-link">
							<a href="~/BackMember/Index">會員資料維護</a>
						</div>
						<div>
							<div class="side-btn-link" data-bs-toggle="collapse" data-bs-target="#collapseTeacher" aria-controls="collapseExample" style="font-size: 20px;">
								教師資料維護
							</div>
							<div class="collapse px-3" id="collapseTeacher">
								<a href="~/BackTeacher/ApplyList" class="side-btn-child-link mt-1">
									老師申請
								</a>
								<a href="~/BackTeacher/ResumeList" class="side-btn-child-link">
									老師履歷
								</a>
							</div>

						</div>
						<div class="side-btn-link">
							<a href='@Url.Content("~/backReport/Index")'>報表查詢</a>
						</div>
						<div class="side-btn-link">
							<a href='@Url.Content("~/BackHome/Signout")'>登出</a>
						</div>
					</div>
				</div>
			</div>
			@*body*@
			@RenderBody()
		</main>

	</div>

	@*驗證錯誤*@
	@{
		if (TempData.ContainsKey("ErrMessage"))
		{
			<script>
				Swal.fire({
					icon: 'error',
					title: '發生錯誤',
					text: '@TempData["ErrMessage"]',
					confirmButtonColor: '#d4b068',
				})
			</script>
		}
	}
	<!-- include app plugin JavaScript -->

	<script src="~/js/plugins.min.js"></script>
	<!-- include app JavaScript -->
	<script src="~/js/app.min.js"></script>
	<!--sweetAlert-->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
	<!-- AOS -->
	<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
	<!-- 浮動效果 -->
	<script src="~/js/vanilla-tilt.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/nsl.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>
